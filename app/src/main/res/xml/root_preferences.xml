<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/settings_header">

        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="foregroundSetting"
            android:title="@string/foreground_title"
            android:summaryOff="@string/foreground_summary_off"
            android:summaryOn="@string/foreground_summary_on" />
        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:dependency="foregroundSetting"
            android:key="foregroundType"
            android:summaryOff="@string/foreground_type_summary_off"
            android:summaryOn="@string/foreground_type_summary_on"
            android:title="@string/foreground_type_title" />
    </PreferenceCategory>

</PreferenceScreen>